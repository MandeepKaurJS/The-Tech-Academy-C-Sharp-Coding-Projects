@model CarInsurancePassTest.Models.CarInsuranceTable
<h2>@ViewBag.Title.</h2>
<h3></h3>
<h2>SignUp</h2>
<div style="background-color:antiquewhite">
    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-header text-center">
                <h5 class="m-0">Sign Up Here</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control" placeholder="Last name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="form-group col-md-12">
                        <label>Date of Birth: </label>

                        <input type="date" name="bday" class="form-control">
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Car Year:  </label>
                        <input type="number" min="1900" max="2099" step="1" placeholder="Car Year" class="form-control" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Car Model:  </label>
                        <input type="text" name="CarModel" class="form-control" placeholder="Car Model" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Car Make:  </label>
                        <input type="text" placeholder="Car Make" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label>If you have ever had a DUI.</label>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" placeholder="Type Yes or No" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label>How many speeding tickets you have.</label>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" placeholder="Type in Numbers" class="form-control" />
                        
                    </div>
                    <div class="form-group col-md-12">
                        <label>Would you like full coverage or liability?</label>
                    </div>
                    <div class= "form-group col-md-12">
                        <input type="text" placeholder="Type Yes or No" class="form-control" />
                    </div>
                </div>

                    <button type="submit" class="btn btn-block btn-primary form-control">Submit</button>
                }
            </div>
        </div>
    </div>
</div>


