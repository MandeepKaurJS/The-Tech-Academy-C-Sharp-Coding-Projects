@using NewsLetterMVC.ViewModels
@model List<SignUpVm>
<h2>Admin</h2>
<div class="row no-gutters m-3 text-center">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-autom shadow">
        <div class="card-header text-center">
            <h5>Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var signup in Model)
            {
                <input type="hidden" name="Id" value="@signup.Id"/>
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
            <div class="row">
                <div class="col-2">
                    @signup.FirstName
                </div>
                <div class="col">
                    @signup.LastName
                </div>
                <div class="col-4">
                    @signup.EmailAddress
                </div>
                <div class="col">
                    <button type="submit"class="btn btn-danger btn-block">
                        Unsubscribe
                    </button>
                </div>
            </div>
                }


           

            }

        </div>
    </div>
</div>




